<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pedestal.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>pedestal</object-name>
    <object-name>pedestal2</object-name>
    <object-name>throttle-knob.L</object-name>
    <object-name>throttle-knob.R</object-name>
    <object-name>rpm-knob.L</object-name>
    <object-name>rpm-knob.R</object-name>
    <object-name>mixture-knob.L</object-name>
    <object-name>mixture-knob.R</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>pedestal2</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/panel-dim</factor-prop>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttle-knob.L</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttle-knob.R</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>rpm-knob.L</object-name>
    <property>controls/engines/engine[0]/propeller-pitch</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>rpm-knob.R</object-name>
    <property>controls/engines/engine[1]/propeller-pitch</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>mixture-knob.L</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>mixture-knob.R</object-name>
    <property>controls/engines/engine[1]/mixture</property>
    <factor> 50 </factor>
    <center>
      <x-m>  0.01796 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.10735 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
